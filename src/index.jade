jade:include templete/bottom.jade
link(href="/static/css/select2.min.css", rel="stylesheet")
link(href="/static/css/select2-bootstrap4.min.css", rel="stylesheet")
script(src="/static/js/select2.min.js")
script.
    $(document).ready(() => {
        $("#method").select2({
            theme: "bootstrap4",
        });
        $("#encodingf").select2({
            theme: "bootstrap4",
            tags: true,
        });
        $("#encodingt").select2({
            theme: "bootstrap4",
            tags: true,
            //- disabled: true,
        });
    });
    $("#method").on("select2:select", (e)=> {
        if (e.params.data.id == "字符编码转换") {
            $("#encodingt").attr("disabled", null);
        } else {
            $("#encodingt").attr("disabled", "disabled");
        }
    });
    $("#fund_select").on("select2:unselect", (e)=> {
        GW.remove_chart_line(e.params.data.id);
    });

    // 快捷键
    $("#ta_in, #ta_out").on("keydown", function(event) {
        if((event.ctrlKey || event.metaKey)) {
            if(event.key == "e") {
                do_encode();
            } else if(event.key == "d") {
                do_decode();
            } else if(event.key == "u") {
                $(this).val($(this).val().toUpperCase());
            } else if(event.key == "l") {
                $(this).val($(this).val().toLowerCase());
            } else {
                return true;
            }
            return false;
        }
    });
    $(document).on("keydown", function(event) {
        if((event.ctrlKey || event.metaKey)) {
            if(event.key == "e") {
                do_encode();
                return false;
            } else if(event.key == "d") {
                do_decode();
                return false;
            }
        }
    });

    $("#btn_encode").on("click", do_encode);
    $("#btn_decode").on("click", do_decode);

    function get_para() {
        return {
            "ta_in": $("#ta_in").val(),
            "ta_out": $("#ta_out").val(),
            "method": $("#method").val(),
            "encodingt": $("#encodingt").val(),
            "encodingf": $("#encodingf").val(),
        }
    }

    function do_encode() {
        let req_data = get_para();
        $("#ta_out").val(null);
        common.api_post({
            url: "/api/encode",
            data: req_data,
            success: (res)=> {
                console.log(res);
                if(res.code == 0) {
                    $("#ta_out").val(res.data);
                } else {
                    $.notify(res.desc, "error");
                }
            },
        });
    }

    function do_decode() {
        let req_data = get_para();
        $("#ta_in").val(null);
        common.api_post({
            url: "/api/decode",
            data: req_data,
            success: (res)=> {
                console.log(res);
                if(res.code == 0) {
                    $("#ta_in").val(res.data);
                } else {
                    $.notify(res.desc, "error");
                }
            },
        });
    }

    $("#ta_in").attr("placeholder", "编码: 在此输入字符串，点击 [编码]\n\n快捷键: 编码 Ctrl+E / 解码 Ctrl+D / 转大写 Ctrl+U / 转小写 Ctrl+L");
    $("#ta_out").attr("placeholder", "解码: 在此输入编码后的字符串，点击 [解码]");
    $("title").text("常用编码转换");

